<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/xl"
    tools:context=".ui.saveQuiz.base.BaseManageQuizFragment">

    <!-- add/edit quiz share 1 layout -->
    <TextView
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_quiz" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etQuizName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quiz_name"
        android:layout_marginVertical="@dimen/s">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etQuizId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quiz_id"
        android:layout_marginVertical="@dimen/s">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etTpq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tpq"
        android:layout_marginVertical="@dimen/s">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/s"
        android:text="@string/import_file"
        app:icon="@drawable/ic_upload"
        app:iconGravity="textStart"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/s"
        android:text="@string/save_quiz"
        android:backgroundTint="@color/black"
        />
</LinearLayout>